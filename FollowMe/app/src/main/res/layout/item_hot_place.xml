<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/cl_hot_place_container"
    android:layout_width="150dp"
    android:layout_height="220dp"
    android:layout_marginEnd="16dp"
    android:layout_marginTop = "10dp"
    android:background="@drawable/login_edittext_round_box"
    xmlns:app="http://schemas.android.com/apk/res-auto">



    <ImageView
        android:id="@+id/img_hot_place_item"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:layout_marginTop="12dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@color/colorBlack"

        />

    <TextView
        android:id="@+id/tv_place_name_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/img_hot_place_item"
        android:layout_marginTop="8dp"
        android:textSize="12sp"
        android:text="카페 포제"
        android:textColor="#000000"
        android:textStyle="bold"
        />

    <RatingBar
        android:id="@+id/rb_star_hotplace_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="?android:attr/ratingBarStyleSmall"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_place_name_item"/>

    <TextView
        android:id="@+id/tv_place_address_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/rb_star_hotplace_item"
        app:layout_constraintBottom_toBottomOf="parent"
        android:textSize="9sp"
        android:text="서울 성동구 연무장9길 7"
        />



</androidx.constraintlayout.widget.ConstraintLayout>