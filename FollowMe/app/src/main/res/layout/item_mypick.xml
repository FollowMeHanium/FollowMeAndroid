<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="170dp"
    android:layout_height="210dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/login_edittext_round_box"
    android:layout_marginRight="15dp"
    android:layout_marginBottom="15dp"
    android:id="@+id/cl_mypick_container">
    
    <ImageView
        android:id="@+id/iv_mypick_item_img"
        android:layout_width="147dp"
        android:layout_height="135dp"
        android:layout_marginTop="11dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@color/colorBlack"/>

    <TextView
        android:id="@+id/tv_mypick_item_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="가게이름"
        android:textColor="@color/colorBlack"
        android:textStyle="bold"
        android:textSize="12sp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/iv_mypick_item_img"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <RatingBar
        android:id="@+id/rb_star_mypick_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="?android:attr/ratingBarStyleSmall"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_mypick_item_title"/>

    <TextView
        android:id="@+id/tv_mypick_item_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="가게주소"
        android:textSize="9sp"
        android:layout_marginTop="3dp"
        app:layout_constraintTop_toBottomOf="@id/rb_star_mypick_item"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <ImageView
        android:id="@+id/iv_mypick_container_checked_item"
        android:layout_width="170dp"
        android:layout_height="210dp"
        android:background="@drawable/mypick_checked_item"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:visibility="gone"
        />

    <ImageView
        android:id="@+id/btn_mypick_editmode_unchecked"
        android:layout_width="28dp"
        android:layout_height="28dp"
        android:src="@drawable/mypick_unchecked"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="11dp"
        android:layout_marginTop="10dp"
        android:visibility="gone"/>

    <ImageView
        android:id="@+id/btn_mypick_editmode_checked"
        android:layout_width="28dp"
        android:layout_height="28dp"
        android:src="@drawable/mypick_checked"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="11dp"
        android:layout_marginTop="10dp"
        android:visibility="gone"/>




</androidx.constraintlayout.widget.ConstraintLayout>