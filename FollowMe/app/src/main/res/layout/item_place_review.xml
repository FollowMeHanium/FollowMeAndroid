<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="380dp"
    android:layout_height="105dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="10dp"
    android:id="@+id/cl_item_place_review"
    android:background="@drawable/bg_item_place_review"
    android:layout_marginBottom="10dp">


    <TextView
        android:id="@+id/tv_item_place_review_user"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="eunj**"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <RatingBar
        android:id="@+id/rb_star_place_review"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="?android:attr/ratingBarStyleSmall"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="2dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@id/tv_item_place_review_rating" />
    
    <View
        android:id="@+id/v_item_place_review_line"
        android:layout_width="360dp"
        android:layout_height="2dp"
        android:background="@color/colorMain"
        android:layout_marginTop="5dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_item_place_review_rating"/>

    <TextView
        android:id="@+id/tv_item_place_review_contents"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="6dp"
        android:text="리뷰 상세 내용입니당"
        android:textSize="12sp"
        android:textColor="@color/colorBlack"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/v_item_place_review_line"/>





</androidx.constraintlayout.widget.ConstraintLayout>

